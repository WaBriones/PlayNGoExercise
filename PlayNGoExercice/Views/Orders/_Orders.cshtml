<div ng-app="coffeeApp">
	<div ng-controller="orderController" class="container">
		<h1>Order Form</h1>
		<form>
			<div class="form-group">
				<label for="office">Office</label>
				<select ng-model="selectedOffice" class="form-control" ng-options="x.OfficeName for x in offices">
					<option value="">-- Select Office --</option>
				</select>
			</div>
			<div class="form-group">
				<label for="coffee">Coffee</label>
				<select ng-model="selectedCoffee" class="form-control" ng-options="x.DrinkName for x in coffeeMenu">
					<option value="">-- Select Coffee --</option>
				</select>
			</div>
			<div class="form-group">
				<label for="customerName">Name</label>
				<input type="text" class="form-control" id="customerName" ng-model="customerName"/>
			</div>

			<button type="submit" class="btn btn-success" ng-click="submitOrder()">Submit</button>
			<div class="form-inline" ng-hide="!orderPlaced">
				<span class="form-inline alert-success">Order Placed</span>&nbsp;
				<span class="glyphicon glyphicon-check" aria-hidden="true"></span>
			</div>
		</form>
	</div>
</div>
